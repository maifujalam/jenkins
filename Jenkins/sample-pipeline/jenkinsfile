pipeline {
    environment {
    registry = "192.100.100.1:5000/app1"
    dockerImage = ""
    }
    agent any
    stages {
        stage('Checkout Source') {
            steps {
                git 'https://gitlab.com/maifujalam/jenkin1.git'
            }
        }
        stage('build') {
            steps {
                script{
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('test') {
            steps {
                echo "Testing"
            }
        }
        stage('push') {
            steps {
                echo "Pushing new image: "+dockerImage
                script {
                    docker.withRegistry('') {
                        dockerImage.push()
                    }
                }
                echo " Image pushed "
            }
        }
        stage('deploy') {
            steps {
                echo ".....Now Deploying....."+dockerImage
                script {
                    cd workspace
                    ./update-deploy.sh ${BUILD_NUMBER}
                    kubernetesDeploy(configs: "deployment.yml", kubeconfigId: "mykubeconfig")
                }
            }
        }
    }
}
